@model MushRoom_Manager.Models.MushroomType
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@using (Html.BeginForm("Save", "Mushrooms"))
{
    <label class="label label-info">Наименование продукта</label><br/>
    @Html.TextBoxFor(m => m.Name)
    @Html.HiddenFor(m => m.Id)<br/>
    <label class="label label-info">Вес продукта</label><br/>
    @Html.TextBoxFor(m => m.PackageWeight)
    
    <button type="submit">Save</button>
}



